<!DOCTYPE html>

<main>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<%= flash[:success] %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
    <table class="table">
     <tbody>
     <tr>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
     </tr>
    <tr>
     <th>name</th>
     <th><%= @user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
    </tr>
　　</tbody>
　</table>


   <div class="row">
   <%= link_to '',edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id}"%>
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
   </div>



<h2>New book</h2>
<%= form_with model: @book, url: books_path, local:true do |f| %>


 <p>Title</p>
 <%= f.text_field :title %>

 <p>Opinion</p>
 <%= f.text_area :body %> <br>
 <%= f.submit 'Create Book'  %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">

    <h1>Books</h1>
    <table class="table table-user-show">
<% @books.each do |book| %>
<tr>
<td><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
            <% end %></td>
  <td>Title:<%= link_to book.title,  book_path(book) %></td>
  <td>Body:<%= book.body %></td>
 </tr>
<% end %>
 </table>
    </div>
  </div>
</div>
<footer>
    <div class="container my-5">
     <div class="row">
      <div class="mx-auto">
       <p>CopyRight Infratop</p>
       </div>
      </div>
     </div>
    </footer>
<!DOCTYPE html>

<main>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  <h2>User info</h2>
  <table class="table">
   <tbody>
     <tr>
       <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
     </tr>
    <tr>
     <th>name</th>
     <th><%= @book.user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= @book.user.introduction %></th>
    </tr>
   </tbody>
　 </table>

     <div class="row">
    <%= link_to"",edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
     <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    </div>

<h2>New book</h2>
<%= form_with model: @booknew, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>

 <p>Opinion</p>
 <%= f.text_area :body %> <br>
 <%= f.submit 'Create Book'  %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
 <table class="table">
  <tbody>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<tr>
 <td>
  <%= link_to  user_path(@book.user.id)  do %>
  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%> <% end %>
  <p><%=link_to @book.user.name, user_path(@book.user.id)%></p>
  </td>
  <td>
  <p><%= @book.title %></p>
  </td>
  <td>
  <p><%= @book.body %></p>
  </td>
  <td>
   <% if @book.user == current_user %>
   <%= link_to "Edit", edit_book_path(@book.id) %>
  <% end %>
  </td>
  <td>
<% if @book.user == current_user %>
 <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>
</td>
</tr>
</tbody>
</table>
</div>
</div>
</main>
<footer>
    <div class="container my-5">
     <div class="row">
      <div class="mx-auto">
       <p>CopyRight Infratop</p>
       </div>
      </div>
     </div>
    </footer>

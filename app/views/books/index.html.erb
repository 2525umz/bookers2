<h2>New book</h2>
<%= form_with model: @book, url: books_path, local:true do |f| %>


 <p>Title</p>
 <%= f.text_field :title %>

 <p>Opinion</p>
 <%= f.text_area :body %> <br>
 <%= f.submit 'Create Book'  %>
<% end %>
 </div>

